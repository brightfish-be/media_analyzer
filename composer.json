{
    "name": "cinemapub/spx_media_analyzer",
    "version": "0.0.1",
    "description": "Analyze video,audio,image files (with ffmpeg)",
    "keywords": [
        "cinemapub",
        "spx_media_analyzer"
    ],
    "homepage": "https://github.com/cinemapub/spx_media_analyzer",
    "license": "MIT",
    "authors": [
        {
            "name": "Peter Forret",
            "email": "p.forret@brightfish.be",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4",
      "ext-json": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "phpunit/phpunit": "^9.0",
        "vimeo/psalm": "^3.11"
    },
    "autoload": {
        "psr-4": {
            "Brightfish\\SpxMediaAnalyzer\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Brightfish\\SpxMediaAnalyzer\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
